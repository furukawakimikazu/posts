<div class="container py-5 h-100">
  <div class="row">
    <div class="col-md-6 mx-auto">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>

  <h2 class="form-signin-heading text-center mb-4">ログイン</h2>

  <%= f.label :email, 'Email Address', class: 'sr-only' %>
  <%= f.email_field :email, autofocus: true, class: 'form-control mb-2', placeholder: 'メールアドレス' %>

  <%= f.label :password, 'Password', class: 'sr-only' %>
  <%= f.password_field :password, autocomplete: "off", class: 'form-control mb-2', placeholder: 'パスワード' %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <%= f.submit "ログイン", class: 'btn btn-lg btn-primary btn-block' %>
<% end %>

<%= render "devise/shared/links" %>

    </div>
  </div>
</div>