
<div class="container">
  <h3>投稿一覧</h3>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-sm-3">
        <div class="card">
          <figure class="card-img-top text-center">
            <%= link_to user do %>
              <%= attachment_image_tag user, :profile_image, size: '220x170', fallback: "no-image.png" %>
            <% end %>
          </figure>
          <div class="card-body text-center">
            <h5 class="card-title">
              <%= link_to user.username, user %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

